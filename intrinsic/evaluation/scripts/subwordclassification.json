{
  "dataset_reader": {
    "type": "word_vectors",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "train_data_path": "[data_dir]/[feat]/[lang]/train.txt",
  "validation_data_path": "[data_dir]/[feat]/[lang]/dev.txt",
  "test_data_path": "[data_dir]/[feat]/[lang]/test.txt",
  "model": {
    "type": "mlp_classifier",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
            "type": "embedding",
            "embedding_dim": 300,
            "pretrained_file": "pretrained_embedding_file",
            "trainable": false
        }
      }
    },
    "classifier_feedforward": {
      "input_dim": 300,
      "num_layers": 2,
      "hidden_dims": [300, x],
      "activations": ["relu", "linear"],
      "dropout": [0.5, 0.0]
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size":16
  },
  "trainer": {
    "num_epochs": 20,
    "patience": 5,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adam"
    }
  },
  "evaluate_on_test": true
}